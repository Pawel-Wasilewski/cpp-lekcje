#include <iostream>
#include <cmath>

using namespace std;

class LiczbyCalkowite{
public:

int liczba;

LiczbyCalkowite(){
    
}
~LiczbyCalkowite(){
    cout << endl << "EJ zniszczyÅ‚em...";
}

void wczytaj(){
    cout << "WPISZ LICZBE CALKOWITA:" << endl;
    cin >> liczba;
    cout << "-------------------------------" << endl;
}

void wypisz(){
    
    cout << "Wpisana liczba: " << liczba << endl;
    
}

void abS(){
    int wartoscBezwzgledna;
    wartoscBezwzgledna = abs(liczba);
    cout << "Wartosc bezwzgledna tej liczby wynosi: " << wartoscBezwzgledna << endl;
}

};



int main()
{
    LiczbyCalkowite liczba1;
    liczba1.wczytaj();
    liczba1.wypisz();
    liczba1.abS();
    
    cout << "-------------------------------" << endl;
    
    LiczbyCalkowite liczba2;
    liczba2.wczytaj();
    liczba2.wypisz();
    liczba2.abS();
    
    cout << "-------------------------------" << endl;
    

    return 0;
}
