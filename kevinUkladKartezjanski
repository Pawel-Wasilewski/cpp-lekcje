#include <iostream>
#include <cmath>

using namespace std;

class Punkt2w{
    private:
    
    float x;
    float y;
    
    public:
    
    Punkt2w(){
        
    }
    ~Punkt2w(){
        cout << endl << "Zniszczono dwuwymiarówkę." << endl;   
    }
    
    void wczytaj(){
        cout << "Wpisz wspolrzedna X: ";
        cin >> x;
        cout << endl << "Wpisz wspolrzedna Y: ";
        cin >> y;
        cout << endl;
    }
    
    void wypisz(){
        cout << "Wspolrzedne punktu wynosza: (" << x << ", " << y << ")" << endl;
    }
    
    
    void wektor2w(float x, float y){
        Punkt2w punktZero;
        punktZero.x = 0;
        punktZero.y = 0;
        
        float wynik = sqrt(((x*x)+(y*y)));
        
        cout << "Długość wektora ["
        << ((punktZero.x + x)*-1) << "; " << ((punktZero.y + y)*-1) << "] wynosi " << wynik;
    }
    
    float getX(){
        return x;
    }
    
    float getY(){
        return y;
    }
    
};

class Punkt3w{
    public:
    
    float x;
    float y;
    float z;
    int choice;
    
    
    Punkt3w(){
        
    }
    ~Punkt3w(){
        cout << endl << "Zniszczono trójwymiarówkę." << endl;   
    }
    
    void wczytaj(){
        cout << "Wpisz wspolrzedna X: ";
        cin >> x;
        cout << endl << "Wpisz wspolrzedna Y: ";
        cin >> y;
        cout << endl << "Wpisz wspolrzedna Z: ";
        cin >> z;
        cout << endl;
    }
    
    void wypisz(){
        cout << "Wspolrzedne punktu wynosza: (" << x << ", " << y << ", " << z << ")" << endl;
    }
    
    void rzutuj(Punkt3w){
        cout << "Chcesz XZ [1], XY [2] czy YZ [3]? ";
        cin >> choice;
        
        switch(choice){
            case 1:{
            cout << "Wspolrzedne punktu wynosza: (" << x << ", " << "0, " <<  z << ")" << endl;
            
            Punkt2w testP;
            testP.wektor2w(x, z);
            break;
            }
            case 2:{
            cout << "Wspolrzedne punktu wynosza: (" << x << ", " << y <<  ", 0" << ")" << endl;
            
            Punkt2w testP;
            testP.wektor2w(x, y);
            break;
            }
            case 3:{
            cout << "Wspolrzedne punktu wynosza: (" << "0, " << y << ", " << z << ")" << endl;
            
            Punkt2w testP;
            testP.wektor2w(y, z);
            break;
        }}
    }
    
};

int main()
{
    Punkt2w jakisPunkt;
    jakisPunkt.wczytaj();
    jakisPunkt.wypisz();
    jakisPunkt.wektor2w(jakisPunkt.getX(), jakisPunkt.getY());
    
    Punkt3w innyPunkt;
    innyPunkt.wczytaj();
    innyPunkt.wypisz();
    innyPunkt.rzutuj(innyPunkt);

    
    return 0;
}
